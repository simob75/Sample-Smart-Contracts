pragma solidity ^0.4.24;

contract VariablesExamples{
    
    bool public switchedOn = true; //the default visibility for variables is "internal"
    address public owner = msg.sender;
    uint public number = 8;
    bytes32 public awesome1 = "Solidity is awesome"; //bytes are more cost efficient than strings
    string public awesome2 = "solidity is awesome";
}

